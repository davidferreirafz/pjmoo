!!!145744.cpp!!!	getPixel(in x : int, in y : int) : Cor
    if (offSetLimite(x,y)){
        Uint8 *pixel = (Uint8 *)pScreen->pixels + y * pScreen->pitch + x * bpp;

        switch(bpp) {
            case 1:
                return *pixel;
            case 2:
                return *(Uint16 *)pixel;
            case 3:
                if (SDL_BYTEORDER == SDL_BIG_ENDIAN){
                    return pixel[0] << 16 | pixel[1] << 8 | pixel[2];
                } else {
                    return pixel[0] | pixel[1] << 8 | pixel[2] << 16;
                }
            case 4:
                return *(Uint32 *)pixel;
            default:
                return 0;
        }
    } else {
        return 0;
